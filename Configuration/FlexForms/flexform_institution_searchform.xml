<T3DataStructure>
	<sheets>
		<sTemplate>
			<ROOT>
				<sheetTitle>Ausgabe</sheetTitle>
				<type>array</type>
				<el>
					<settings.flexform.header>
						<label>Überschrift für Suchformular (optional)</label>
						<config>
							<type>input</type>
							<size>30</size>
							<default></default>
						</config>
					</settings.flexform.header>
					<settings.flexform.header_layout>
						<label>Layout</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>Überschrift 1</label>
									<value>1</value>
								</numIndex>
								<numIndex index="1">
									<label>Überschrift 2</label>
									<value>2</value>
								</numIndex>
								<numIndex index="2">
									<label>Überschrift 3</label>
									<value>3</value>
								</numIndex>
							</items>
							<default>2</default>
						</config>
					</settings.flexform.header_layout>
					<settings.flexform.showFilter>
						<label>Nutzer sollen die Liste filtern können</label
						><onChange>reload</onChange>
						<config>
							<type>check</type>
							<default>0</default>
						</config>
					</settings.flexform.showFilter>
				</el>
			</ROOT>
		</sTemplate>
		<sFilter>
			<ROOT>
				<sheetTitle>Filter</sheetTitle>
				<type>array</type>
				<el>
					<settings.filter.cityCollection>
						<label>Orte (Namen durch Komma getrennt)</label>
						<config>
							<type>text</type>
							<rows>3</rows>
							<cols>40</cols>
						</config>
						<displayCond>FIELD:sTemplate.settings.flexform.showFilter:=:1</displayCond>
					</settings.filter.cityCollection>
					<settings.filter.categoryCollection>
						<label>Kategorien</label>
						<config>
							<type>group</type>
							<allowed>sys_category</allowed>
							<size>10</size>
							<maxitems>99</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
							<wizards>
								<suggest>
									<type>suggest</type>
									<default>
										<searchWholePhrase>1</searchWholePhrase>
									</default>
								</suggest>
							</wizards>
						</config><displayCond>FIELD:sTemplate.settings.flexform.showFilter:=:1</displayCond>
					</settings.filter.categoryCollection>
				</el>
			</ROOT>
		</sFilter>
		<sPages>
			<ROOT>
				<sheetTitle>Seiten</sheetTitle>
				<type>array</type>
				<el>
					<settings.flexform.pidList>
						<label>Seite für Listenansicht</label>
						<config>
							<type>group</type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
							<wizards>
								<suggest>
									<type>suggest</type>
									<default>
										<searchWholePhrase>1</searchWholePhrase>
									</default>
								</suggest>
							</wizards>
						</config>
					</settings.flexform.pidList>
				</el>
			</ROOT>
		</sPages>
	</sheets>
</T3DataStructure>
