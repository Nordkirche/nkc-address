<T3DataStructure>
	<sheets>
        <sDEF>
            <ROOT>
                <sheetTitle>Funktion</sheetTitle>
                <type>array</type>
                <el>
                    <settings.flexform.showFilter>
                        <label>Nutzer sollen die Ausgabe filtern können</label>
                        <onChange>reload</onChange>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.flexform.showFilter>
                    <settings.flexform.stream>
                        <label>Marker sukzessive nachladen</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.flexform.stream>
                    <settings.flexform.center>
                        <label>Zentrum der Karte </label>
                        <onChange>reload</onChange>
                        <config>
                            <type>radio</type>
                            <default>0</default>
                            <items>
                                <numIndex index="0">
                                    <label>Karte automatisch ausrichten</label>
                                    <value>0</value>
                                </numIndex>
                                <numIndex index="1">
                                    <label>Karte fest über Geo-Koordinaten ausrichten</label>
                                    <value>1</value>
                                </numIndex>
                                <numIndex index="2">
                                    <label>Karte anhand der Position des Betrachters ausrichten</label>
                                    <value>2</value>
                                </numIndex>
                            </items>
                        </config>
                    </settings.flexform.center>
                    <settings.flexform.latitude>
                        <label>Breitengrad</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <default></default>
                        </config>
                        <displayCond>FIELD:settings.flexform.center:=:1</displayCond>
                    </settings.flexform.latitude>
                    <settings.flexform.longitude>
                        <label>Längengrad</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <default></default>
                        </config>
                        <displayCond>FIELD:settings.flexform.center:=:1</displayCond>
                    </settings.flexform.longitude>
                </el>
            </ROOT>
        </sDEF>
        <sMarker>
            <ROOT>
                <sheetTitle>Marker</sheetTitle>
                <type>array</type>
                <el>
                    <settings.flexform.allInstitutions>
                        <label>Alle Institutionen zeigen</label>
                        <onChange>reload</onChange>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.flexform.allInstitutions>
                    <settings.flexform.institutionCollection>
                        <label>Diese Institutionen darstellen</label>
                        <config>
                            <type>user</type>
                            <renderType>napiItemSelector</renderType>
                            <allowed>institution</allowed>
                            <minItems>0</minItems>
                            <maxItems>99</maxItems>
                            <size>10</size>
                        </config>
                        <displayCond>FIELD:settings.flexform.allInstitutions:!=:1</displayCond>
                    </settings.flexform.institutionCollection>
                    <settings.flexform.selectInstitutionOption>
                        <label>Welche Institutionen sollen dargestellt werden?</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0">
                                    <label>Die ausgewählten</label>
                                    <value>SELECTION</value>
                                </numIndex>
                                <numIndex index="1">
                                    <label>Die Unterinstitutionen der ausgewählten (1. Ebene)</label>
                                    <value>CHILDREN</value>
                                </numIndex>
                                <numIndex index="2">
                                    <label>Die Unterinstitutionen der ausgewählten (alle)</label>
                                    <value>CHILDREN_RECURSIVE</value>
                                </numIndex>
                                <numIndex index="3">
                                    <label>Die ausgewählten und deren Unterinstitutionen (1. Ebene)</label>
                                    <value>BOTH</value>
                                </numIndex>
                                <numIndex index="4">
                                    <label>Die ausgewählten und deren Unterinstitutionen (alle)</label>
                                    <value>BOTH_RECURSIVE</value>
                                </numIndex>
                            </items>
                        </config>
                        <displayCond>FIELD:settings.flexform.allInstitutions:!=:1</displayCond>
                    </settings.flexform.selectInstitutionOption>
                    <settings.flexform.institutionType>
                        <label>Alle Institutionen dieses Typs darstellen</label>
                        <config>
                            <type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <itemsProcFunc>Nordkirche\NkcBase\CustomField\SelectObject->createNapiItems</itemsProcFunc>
                            <allowed>institutionType</allowed>
                        </config>
                        <displayCond>FIELD:settings.flexform.allInstitutions:!=:1</displayCond>
                    </settings.flexform.institutionType>
                    <settings.flexform.categories>
                        <label>Institutionen mit diesen Kategorien darstellen</label>
                        <exclude>1</exclude>
                        <config>
                            <type>select</type>
                            <renderMode>tree</renderMode>
                            <renderType>selectTree</renderType>
                            <treeConfig>
                                <parentField>parent</parentField>
                                <appearance>
                                    <maxLevels>99</maxLevels>
                                    <expandAll>TRUE</expandAll>
                                    <showHeader>TRUE</showHeader>
                                </appearance>
                            </treeConfig>
                            <foreign_table>sys_category</foreign_table>
                            <foreign_table_where>AND (sys_category.sys_language_uid = 0 OR sys_category.l10n_parent = 0) ORDER BY sys_category.sorting</foreign_table_where>
                            <size>10</size>
                            <autoSizeMax>20</autoSizeMax>
                            <minitems>0</minitems>
                            <maxitems>20</maxitems>
                        </config>
                        <displayCond>FIELD:settings.flexform.allInstitutions:!=:1</displayCond>
                    </settings.flexform.categories>
                    <settings.flexform.allPersons>
                        <onChange>reload</onChange><label>Alle Personen zeigen</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.flexform.allPersons>
                    <settings.flexform.personCollection>
                        <label>Diese Personen darstellen</label>
                        <config>
                            <type>user</type>
                            <renderType>napiItemSelector</renderType>
                            <allowed>person</allowed>
                            <minItems>0</minItems>
                            <maxItems>99</maxItems>
                            <size>10</size>
                        </config>
                        <displayCond>FIELD:settings.flexform.allPersons:!=:1</displayCond>
                    </settings.flexform.personCollection>
                    <settings.flexform.functionType>
                        <label>Alle Personen mit diesem Funktionstyp darstellen</label>
                        <config>
                            <type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <itemsProcFunc>Nordkirche\NkcBase\CustomField\SelectObject->createNapiItems</itemsProcFunc>
                            <allowed>functionType</allowed>
                        </config>
                        <displayCond>FIELD:settings.flexform.allPersons:!=:1</displayCond>
                    </settings.flexform.functionType>
                    <settings.flexform.availableFunction>
                        <label>Alle Personen mit dieser Funktion darstellen</label>
                        <config>
                            <type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <itemsProcFunc>Nordkirche\NkcBase\CustomField\SelectObject->createNapiItems</itemsProcFunc>
                            <allowed>availableFunction</allowed>
                        </config>
                        <displayCond>FIELD:settings.flexform.allPersons:!=:1</displayCond>
                    </settings.flexform.availableFunction>
                </el>
            </ROOT>
        </sMarker>
		<sTemplate>
			<ROOT>
				<sheetTitle>Ausgabe</sheetTitle>
				<type>array</type>
				<el>
					<settings.flexform.header>
						<label>Überschrift für Suchformular (optional)</label>
                        <config>
                            <type>input</type>
                            <size>30</size>
                            <default></default>
                        </config>
                        <displayCond>FIELD:sDEF.settings.flexform.showFilter:=:1</displayCond>
                    </settings.flexform.header>
					<settings.flexform.header_layout>
						<label>Layout</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0">
                                    <label>Überschrift 1</label>
                                    <value>1</value>
                                </numIndex>
                                <numIndex index="1">
                                    <label>Überschrift 2</label>
                                    <value>2</value>
                                </numIndex>
                                <numIndex index="2">
                                    <label>Überschrift 3</label>
                                    <value>3</value>
                                </numIndex>
                            </items>
                            <default>2</default>
                        </config>
                        <displayCond>FIELD:sDEF.settings.flexform.showFilter:=:1</displayCond>
					</settings.flexform.header_layout>
					<settings.flexform.maxItems>
						<label>Maximale Anzahl</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <default></default>
                        </config>
					</settings.flexform.maxItems>
					<settings.flexform.paginate.mode>
						<label>Art der Paginierung</label>
                        <onChange>reload</onChange>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0">
                                    <label>Keine Paginierung</label>
                                    <value>0</value>
                                </numIndex>
                                <numIndex index="1">
                                    <label>Button zum Laden weiterer Elemente</label>
                                    <value>1</value>
                                </numIndex>
                                <numIndex index="2">
                                    <label>Blätternavigation einblenden</label>
                                    <value>2</value>
                                </numIndex>
                            </items>
                        </config>
					</settings.flexform.paginate.mode>
					<settings.flexform.paginate.itemsPerPage>
						<label>Anzahl Elemente pro Seite</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <default>25</default>
                        </config>
                        <displayCond>FIELD:settings.flexform.paginate.mode:!=:0</displayCond>
					</settings.flexform.paginate.itemsPerPage>
					<settings.flexform.paginate.insertAbove>
						<label>Paginierung über der Liste anzeigen</label>
                        <config>
                            <type>check</type>
                            <default>0</default>
                        </config>
                        <displayCond>FIELD:settings.flexform.paginate.mode:=:2</displayCond>
					</settings.flexform.paginate.insertAbove>
					<settings.flexform.paginate.insertBelow>
						<label>Paginierung unter der Liste anzeigen</label>
                        <config>
                            <type>check</type>
                            <default>1</default>
                        </config>
                        <displayCond>FIELD:settings.flexform.paginate.mode:=:2</displayCond>
					</settings.flexform.paginate.insertBelow>
					<settings.flexform.paginate.maximumNumberOfLinks>
						<label>Anzahl Links in Paginierung</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <default>5</default>
                        </config>
                        <displayCond>FIELD:settings.flexform.paginate.mode:=:2</displayCond>
					</settings.flexform.paginate.maximumNumberOfLinks>
				</el>
			</ROOT>
		</sTemplate>
        <sPages>
            <ROOT>
                <sheetTitle>Seiten</sheetTitle>
                <type>array</type>
                <el>
                    <settings.flexform.pidInstitutionSingle>
                        <label>Seite für Einzelansicht von Institutionen</label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                    <default>
                                        <searchWholePhrase>1</searchWholePhrase>
                                    </default>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.flexform.pidInstitutionSingle>
                    <settings.flexform.pidPersonSingle>
                        <label>Seite für Einzelansicht von Personen</label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                    <default>
                                        <searchWholePhrase>1</searchWholePhrase>
                                    </default>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.flexform.pidPersonSingle>
                </el>
            </ROOT>
        </sPages>
	</sheets>
</T3DataStructure>
