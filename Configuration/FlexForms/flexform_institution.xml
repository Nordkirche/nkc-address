<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<sheetTitle>Funktion</sheetTitle>
				<type>array</type>
				<el>
					<settings.flexform.singleInstitution>
						<label>Ausgewählte Institution darstellen</label><config>
								<type>user</type>
								<renderType>napiItemSelector</renderType>
								<allowed>institution</allowed>
								<minItems>0</minItems>
								<maxItems>1</maxItems>
								<size>1</size>
							</config>
					</settings.flexform.singleInstitution>
				</el>
			</ROOT>
		</sDEF>
		<sTemplate>
			<ROOT>
				<sheetTitle>Ausgabe</sheetTitle>
				<type>array</type>
				<el>
					<settings.flexform.showTemplate>
						<label>Ausgabe als</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>Vollständige Visitenkarte</label>
									<value>VCard</value>
								</numIndex>
								<numIndex index="1">
									<label>Mini-Visitenkarte</label>
									<value>MiniVCard</value>
								</numIndex>
							</items>
							<default>VCard</default>
						</config>
					</settings.flexform.showTemplate>
					<settings.flexform.openingHours>
						<label>Öffnungszeiten anzeigen</label>
						<config>
							<type>check</type>
							<default>0</default>
						</config>
					</settings.flexform.openingHours>
				</el>
			</ROOT>
		</sTemplate>
		<sPages>
			<ROOT>
				<sheetTitle>Seiten</sheetTitle>
				<type>array</type>
				<el>
					<settings.flexform.pidSingle>
						<label>Seite für Einzelansicht</label>
						<config>
							<type>group</type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
							<wizards>
								<suggest>
									<type>suggest</type>
									<default>
										<searchWholePhrase>1</searchWholePhrase>
									</default>
								</suggest>
							</wizards>
						</config>
					</settings.flexform.pidSingle>
					<settings.flexform.pidList>
						<label>Seite für Listenansicht</label>
						<config>
							<type>group</type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
							<wizards>
								<suggest>
									<type>suggest</type>
									<default>
										<searchWholePhrase>1</searchWholePhrase>
									</default>
								</suggest>
							</wizards>
						</config>
					</settings.flexform.pidList>
					<settings.flexform.pidPersonSingle>
						<label>Seite für Einzelansicht von Personen</label>
						<config>
							<type>group</type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
							<wizards>
								<suggest>
									<type>suggest</type>
									<default>
										<searchWholePhrase>1</searchWholePhrase>
									</default>
								</suggest>
							</wizards>
						</config>
					</settings.flexform.pidPersonSingle>
					<settings.flexform.pidEventList>
						<label>Seite für Listenansicht von Veranstaltungen</label>
						<config>
							<type>group</type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
							<wizards>
								<suggest>anstaltungen
									<type>suggest</type>
									<default>
										<searchWholePhrase>1</searchWholePhrase>
									</default>
								</suggest>
							</wizards>
						</config>
					</settings.flexform.pidEventList>
				</el>
			</ROOT>
		</sPages>
	</sheets>
</T3DataStructure>
